<!-- Views/BattleItem/Index.cshtml -->
@model IEnumerable<PokemonUniteBuildTracker.ViewModels.BattleItemViewModel>

@{
    ViewData["Title"] = "Battle Items";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <!-- Add other columns if necessary -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.BattleItemImgLink))
                    {
                        <img src="@item.BattleItemImgLink" alt="@item.BattleItemName" width="50" height="50" />
                    }
                </td>
                <td>@item.BattleItemName</td>
                <!-- Add other columns if necessary -->
                <td>
                    <a asp-action="Details" asp-route-id="@item.BattleItemId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.BattleItemId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.BattleItemId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Battle Item</a>
