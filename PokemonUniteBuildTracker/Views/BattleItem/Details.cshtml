@model PokemonUniteBuildTracker.ViewModels.BattleItemViewModel

@{
    ViewData["Title"] = "Battle Item Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.BattleItemName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.BattleItemImgLink))
            {
                <img src="@Model.BattleItemImgLink" alt="@Model.BattleItemName" width="100" height="100" />
            }
        </dd>
        
        <dt class="col-sm-2">HP</dt>
        <dd class="col-sm-10">@Model.BattleItemHP</dd>
        <dt class="col-sm-2">Attack</dt>
        <dd class="col-sm-10">@Model.BattleItemAttack</dd>
        <dt class="col-sm-2">Defense</dt>
        <dd class="col-sm-10">@Model.BattleItemDefense</dd>
        <dt class="col-sm-2">Sp Attack</dt>
        <dd class="col-sm-10">@Model.BattleItemSpAttack</dd>
        <dt class="col-sm-2">Sp Defense</dt>
        <dd class="col-sm-10">@Model.BattleItemSpDefense</dd>
        <dt class="col-sm-2">Crit Rate</dt>
        <dd class="col-sm-10">@Model.BattleItemCritRate</dd>
        <dt class="col-sm-2">CDR</dt>
        <dd class="col-sm-10">@Model.BattleItemCDR</dd>
        <dt class="col-sm-2">Lifesteal</dt>
        <dd class="col-sm-10">@Model.BattleItemLifesteal</dd>
        <dt class="col-sm-2">Attack Speed</dt>
        <dd class="col-sm-10">@Model.BattleItemAttackSpeed</dd>
        <dt class="col-sm-2">Move Speed</dt>
        <dd class="col-sm-10">@Model.BattleItemMoveSpeed</dd>
        
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BattleItemId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
