<!-- Views/BattleItem/Delete.cshtml -->
@model PokemonUniteBuildTracker.ViewModels.BattleItemViewModel

@{
    ViewData["Title"] = "Delete Battle Item";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Battle Item?</h3>

<div>
    <h4>@Model.BattleItemName</h4>
    <hr />
    <!-- Display relevant information as in Details view -->
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.BattleItemImgLink))
            {
                <img src="@Model.BattleItemImgLink" alt="@Model.BattleItemName" width="100" height="100" />
            }
        </dd>
        <!-- Display stats -->
        <dt class="col-sm-2">HP</dt>
        <dd class="col-sm-10">@Model.BattleItemHP</dd>
        <!-- Repeat for other stats -->
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BattleItemId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
