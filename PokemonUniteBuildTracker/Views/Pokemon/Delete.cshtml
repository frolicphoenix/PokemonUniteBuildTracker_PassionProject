@model PokemonUniteBuildTracker.ViewModels.PokemonViewModel

@{
    ViewData["Title"] = "Delete Pokémon";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Pokémon?</h3>

<div>
    <img src="@Model.PokemonImgLink" alt="@Model.PokemonName" width="50" height="50" />
    <h4>@Model.PokemonName</h4>
    <hr />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PokemonId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
