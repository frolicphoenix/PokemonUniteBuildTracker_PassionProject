@model PokemonUniteBuildTracker.ViewModels.HeldItemViewModel

@{
    ViewData["Title"] = "Delete Held Item";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Held Item?</h3>

<div>
    <h4>@Model.HeldItemName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HeldItemImgLink))
            {
                <img src="@Model.HeldItemImgLink" alt="@Model.HeldItemName" width="100" height="100" />
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="HeldItemId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
